{
    "compilerOptions": {
        "module": "commonjs",
        "sourceMap": true,
        "target": "ES2016",
        "rootDir": "./src",
        "outDir": "./public",
        "removeComments": true,
        "noEmitOnError": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true
    },
    "exclude": [
        "node_modules"
    ]
}